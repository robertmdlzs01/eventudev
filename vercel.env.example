# Variables de entorno para Vercel
# Configura estas variables en el dashboard de Vercel

# API Configuration
NEXT_PUBLIC_API_URL=https://tu-proyecto.vercel.app

# Environment
NODE_ENV=production

# Build Configuration
NEXT_TELEMETRY_DISABLED=1

# Database Configuration (Vercel Postgres)
POSTGRES_URL=postgres://username:password@host:port/database
POSTGRES_PRISMA_URL=postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgres://username:password@host:port/database
POSTGRES_USER=username
POSTGRES_HOST=host
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=database

# JWT Configuration
JWT_SECRET=tu-jwt-secret-super-seguro
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Optional: Sentry (si usas error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
