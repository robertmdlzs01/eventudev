# Variables de entorno para producción en DomCloud

# Configuración de la aplicación
NODE_ENV=production
PORT=3001

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_NAME=eventudev
DB_PORT=3306

# Configuración de JWT
JWT_SECRET=tu-jwt-secret-super-seguro-para-produccion

# URL del frontend (ajusta según tu dominio)
NEXT_PUBLIC_API_URL=https://tu-dominio.com/api
FRONTEND_URL=https://tu-dominio.com

# Configuración de pagos (si usas ePayco u otros)
EPAYCO_P_CUST_ID_CLIENTE=tu_cliente_id
EPAYCO_P_KEY=tu_llave_publica
EPAYCO_P_SECRET_KEY=tu_llave_secreta
EPAYCO_P_TEST_REQUEST=false

# Configuración de Google Analytics (opcional)
NEXT_PUBLIC_GA_ID=tu_google_analytics_id

# Configuración de email (si usas servicio de email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_email

# Configuración de archivos y uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configuración de WebSocket
WS_PORT=3002