# CONFIGURACIÓN DE PRODUCCIÓN SEGURA - EVENTU
# NO COMPARTIR - CONFIDENCIAL

# Database Configuration - CAMBIAR CREDENCIALES
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventu_db
DB_USER=eventu_prod_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123456789
DB_SSL=true

# Server Configuration
PORT=3002
NODE_ENV=production
FRONTEND_URL=https://eventu.mnz.dom.my.id

# JWT Configuration - SECRETS SEGUROS
JWT_SECRET=CHANGE_THIS_TO_256_BIT_SECURE_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_TO_256_BIT_REFRESH_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=5

# CORS Configuration - RESTRICTIVO
ALLOWED_ORIGINS=https://eventu.mnz.dom.my.id,https://www.eventu.mnz.dom.my.id
CORS_CREDENTIALS=true

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
QUARANTINE_ENABLED=true
VIRUS_SCAN_ENABLED=true

# Encryption Keys
DATA_ENCRYPTION_KEY=CHANGE_THIS_TO_256_BIT_ENCRYPTION_KEY
BACKUP_ENCRYPTION_KEY=CHANGE_THIS_TO_256_BIT_BACKUP_KEY
SESSION_ENCRYPTION_KEY=CHANGE_THIS_TO_256_BIT_SESSION_KEY

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Monitoring
SECURITY_LOGGING=true
AUDIT_RETENTION_DAYS=90
ALERT_EMAIL=security@eventu.com
ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SECURITY/WEBHOOK

# Payment Configuration
PAYMENT_GATEWAY=cobru
PAYMENT_MODE=production

# ePayco Production Configuration
EPAYCO_PUBLIC_KEY=your-epayco-public-key-production
EPAYCO_PRIVATE_KEY=your-epayco-private-key-production
EPAYCO_P_KEY=your-epayco-p-key-production
EPAYCO_CUSTOMER_ID=your-epayco-customer-id-production

# ePayco URLs (production)
EPAYCO_CONFIRM_URL=https://eventu.mnz.dom.my.id/api/payments/epayco/confirm
EPAYCO_RESPONSE_URL=https://eventu.mnz.dom.my.id/checkout/success
EPAYCO_CANCEL_URL=https://eventu.mnz.dom.my.id/checkout/cancel

# Cobru Configuration (production)
COBRU_API_URL=https://api.cobru.co
COBRU_API_KEY=your_cobru_production_api_key
COBRU_SECRET_KEY=your_cobru_production_secret_key
COBRU_MERCHANT_ID=your_cobru_production_merchant_id
COBRU_ENVIRONMENT=production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
