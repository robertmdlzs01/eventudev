# Configuración de Producción para DomCloud
# Copia este archivo y renómbralo a config.env en el backend

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventu_db
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db

# Server Configuration
PORT=3002
JWT_SECRET=tu_jwt_secret_super_seguro_de_produccion

# Payment Gateway Configuration
PAYMENT_GATEWAY=epayco
PAYMENT_MODE=production

# ePayco Production Configuration
EPAYCO_PUBLIC_KEY=tu_epayco_public_key_production
EPAYCO_PRIVATE_KEY=tu_epayco_private_key_production
EPAYCO_P_KEY=tu_epayco_p_key_production
EPAYCO_CUSTOMER_ID=tu_epayco_customer_id_production

# ePayco URLs (Production)
EPAYCO_CONFIRM_URL=https://tu-dominio.domcloud.co/api/payments/epayco/confirm
EPAYCO_RESPONSE_URL=https://tu-dominio.domcloud.co/checkout/success
EPAYCO_CANCEL_URL=https://tu-dominio.domcloud.co/checkout/cancel

# Cobru Production Configuration
COBRU_API_URL=https://api.cobru.co
COBRU_API_KEY=tu_cobru_api_key_production
COBRU_SECRET_KEY=tu_cobru_secret_key_production
COBRU_MERCHANT_ID=tu_cobru_merchant_id_production
COBRU_ENVIRONMENT=production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password

# Security
CORS_ORIGIN=https://tu-dominio.domcloud.co
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
