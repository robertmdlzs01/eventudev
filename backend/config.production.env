# Database Configuration for Production
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventu_db
DB_USER=postgres
DB_PASSWORD=SECURE_PRODUCTION_DB_PASSWORD_CHANGED
DB_SSL=true

# Server Configuration
PORT=3002
NODE_ENV=production
FRONTEND_URL=https://eventu.mnz.dom.my.id

# JWT Configuration
JWT_SECRET=SECURE_PRODUCTION_JWT_SECRET_CHANGED
JWT_REFRESH_SECRET=SECURE_PRODUCTION_REFRESH_SECRET_CHANGED
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration
PAYMENT_GATEWAY=cobru
PAYMENT_MODE=sandbox

# ePayco Sandbox Configuration
EPAYCO_PUBLIC_KEY=your-epayco-public-key-sandbox
EPAYCO_PRIVATE_KEY=your-epayco-private-key-sandbox
EPAYCO_P_KEY=your-epayco-p-key-sandbox
EPAYCO_CUSTOMER_ID=your-epayco-customer-id-sandbox

# ePayco URLs (production)
EPAYCO_CONFIRM_URL=https://eventu.mnz.dom.my.id/api/payments/epayco/confirm
EPAYCO_RESPONSE_URL=https://eventu.mnz.dom.my.id/checkout/success
EPAYCO_CANCEL_URL=https://eventu.mnz.dom.my.id/checkout/cancel

# Cobru Configuration
COBRU_API_URL=https://api.cobru.co
COBRU_API_KEY=cobru_test_api_key_12345
COBRU_SECRET_KEY=cobru_test_secret_key_67890
COBRU_MERCHANT_ID=cobru_test_merchant_001
COBRU_ENVIRONMENT=sandbox

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password